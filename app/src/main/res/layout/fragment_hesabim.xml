<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.HesabimFragment">
    
    <ImageView
        android:id="@+id/imageViewBackToHomeHesabim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_to_home"
        android:padding="16dp"
        app:tint="?attr/colorControlNormal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Geri dön"/>

    <TextView
        android:id="@+id/textViewHesabimTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hesabım"
        android:textAppearance="?attr/textAppearanceHeadline6"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBackToHomeHesabim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageViewBackToHomeHesabim"
        app:layout_constraintTop_toTopOf="@+id/imageViewBackToHomeHesabim" />

    <ImageView
        android:id="@+id/imageViewUserProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_person" 
        app:tint="?attr/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewHesabimTitle"
        app:layout_constraintBottom_toTopOf="@id/textViewKullaniciAdi"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginTop="64dp"
        android:contentDescription="Kullanıcı Profili"/>

    <TextView
        android:id="@+id/textViewKullaniciAdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Volkan Ergün"
        android:textAppearance="?attr/textAppearanceHeadline5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewUserProfile"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
